<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    >
    <LinearLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/reOutcomeBtn"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white"
            android:layout_weight="1"
            android:showDividers="middle">
            <ImageView
                android:id = "@+id/detailOutcomeImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src = "@drawable/icons_outcome3"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/outcomeText"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:layout_weight="1"
                android:text="支出"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/reIncomeBtn"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/center_orange"
            android:divider="@drawable/income_underline"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id = "@+id/detailIncomeImg"
                android:src = "@drawable/icons_income02"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/incomeText"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:layout_weight="1"
                android:text="收入"/>
        </LinearLayout>
    </LinearLayout>
