<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
    <!--<ImageView
        android:id="@+id/camera"
        android:layout_width="110dp"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/iconfont_xiangji"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="上传头像"
            android:textColor="@color/deepgrey"
            android:textSize="32sp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/txt_nick"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/deepgrey"
            android:text="昵称"/>
        <EditText
            android:id="@+id/nick"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/txt_nick"
            android:background="@null"
            android:hint="给自己取一个响亮的名字吧"
            android:textSize="18sp"
            android:textColor="@color/deepgrey"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/txt_sex"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/deepgrey"
            android:text="性别"/>
        <TextView
            android:id="@+id/sex"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/txt_sex"
            android:layout_marginLeft="15dp"
            android:hint="选择性别"
            android:textSize="18sp"
            android:textColor="@color/deepgrey"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/complete"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@color/desc"
        android:textColor="@color/deepgrey"
        android:textSize="28sp"
        android:text="完成"/>
</LinearLayout>